<% include ./partials/header %>

<div class="row">
	<div class="col-lg-12">
	    <div class="main-content">
	        <h1>Verify Information</h1>
	        <br>
    		<div class="div-form-style">
                <form action="/verify" method="POST" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="name" class="col-sm-3 col-form-label font-weight-bold text-left">Name</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="name" placeholder="Name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="roll" class="col-sm-3 col-form-label font-weight-bold text-left">Roll No</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="roll" placeholder="Roll No" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="college" class="col-sm-3 col-form-label font-weight-bold text-left">College</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="college" placeholder="eg. Thapar Institute of Engineering and Technology" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="college_id" class="col-sm-3 col-form-label font-weight-bold text-left">College Id</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" name="college_id" placeholder="College Id" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="file" class="col-sm-3 col-form-label font-weight-bold text-left">Degree</label>
                        <div class="col-sm-9">
                            <input class="form-contol-file" type="file" name="file" accept=".doc" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-dark btn-block">Verify</button>
                    </div>
                </form>
                <a href="/">Go Back</a>
            </div>
        </div>
	</div>
</div>

<% include ./partials/footer %>